<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--    main contents-->
    <LinearLayout
        android:id="@+id/main_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <Button
                android:id="@+id/testbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/nav"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#99ccff"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/jua_ttf"
                        android:gravity="center|bottom"
                        android:text="TRIP GUIDE"
                        android:textColor="#ffffff"
                        android:textSize="55dp" />

                </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textColor="#000000"
                    android:fontFamily="@font/jua_ttf"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"/>


                <EditText
                    android:id="@+id/USERID"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#000000"
                    android:fontFamily="@font/jua_ttf"
                    android:gravity="center_vertical"
                    android:hint="아이디를 입력해주세요."
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textColor="#000000"
                    android:fontFamily="@font/jua_ttf"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"/>
                <EditText
                    android:id="@+id/USERPASSWORD"
                    android:fontFamily="@font/jua_ttf"
                    android:hint="비밀번호를 입력해주세요."
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/text_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인"
                    android:textColor="#000000"
                    android:fontFamily="@font/jua_ttf"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"/>
                <EditText
                    android:id="@+id/CHECK_PASSWORD"
                    android:fontFamily="@font/jua_ttf"
                    android:hint="비밀번호를 다시 입력해주세요."
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성함"
                    android:textColor="#000000"
                    android:fontFamily="@font/jua_ttf"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"/>
                <EditText
                    android:id="@+id/USERNAME"
                    android:fontFamily="@font/jua_ttf"
                    android:hint="성함을 입력해주세요."
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/NAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textColor="#000000"
                    android:fontFamily="@font/jua_ttf"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"/>

                <EditText
                    android:id="@+id/USERNICKNAME"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/jua_ttf"
                    android:hint = "사용하실 닉네임을 입력해주세요."
                    android:textSize="15dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textColor="#000000"
                    android:fontFamily="@font/jua_ttf"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"/>

                <EditText
                    android:id="@+id/USEREAMAIL"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/jua_ttf"
                    android:hint = "이메일 주소를 입력해주세요."
                    android:textSize="15dp"
                    android:gravity="center_vertical" />


                <Button
                    android:id="@+id/SIGNUP"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="회원 가입하기"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/jua_ttf"
                    android:background="@drawable/btn_repple_ex"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/alarm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/jua_ttf"
                    android:textSize="15dp"
                    android:textColor="#FD2B75"
                    android:text="알람"/>
            </LinearLayout>


             </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <!--    Navigation contents-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <Button
                    android:id="@+id/close_nav_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/close"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/loginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jua_ttf"
                    android:text="로그인하기  >"
                    android:background="@drawable/nav_menu_ripple"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:paddingLeft="25dp"
                    android:layout_marginTop="30dp"/>

                <Button
                    android:id="@+id/btn_edituser"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/nav_menu_ripple"
                    android:text="정보 수정하기"
                    android:fontFamily="@font/jua_ttf"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/angle_bracket"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="15dp"/>

                <Button
                    android:id="@+id/FAQ"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/nav_menu_ripple"
                    android:text="FAQ"
                    android:fontFamily="@font/jua_ttf"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/angle_bracket"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.navigation.NavigationView></androidx.drawerlayout.widget.DrawerLayout>