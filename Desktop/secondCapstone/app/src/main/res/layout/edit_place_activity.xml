<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editPlaceActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/main_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">
            <Button
                android:id="@+id/testbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/nav"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/skyblue_background"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/jua_ttf"
                android:text="원하는 태그를 입력해 보세요."
                android:textColor="#000000"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/tag"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:completionThreshold="1"
                android:drawableRight="@drawable/searchbutton"
                android:fontFamily="@font/jua_ttf"
                android:hint="조용한, 맛있는, ..."
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tag_layout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            android:orientation="vertical">

        </LinearLayout>
        <Button
            android:id="@+id/nextBtn"
            android:textSize="17dp"
            android:background="@drawable/btn_repple_ex"
            android:textColor="#ffffff"
            android:fontFamily="@font/jua_ttf"
            android:layout_gravity="center"
            android:text="일정 추가하기"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editPlaceDayTextView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editPlaceDateTextView"/>
</LinearLayout>