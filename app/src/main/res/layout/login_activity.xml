<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textColor="#000000"
            android:fontFamily="@font/jua_ttf"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editText_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jua_ttf"
            android:hint="아이디 입력"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:backgroundTint="#000000"/>

        <TextView
            android:id="@+id/text_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textColor="#000000"
            android:fontFamily="@font/jua_ttf"
            android:textSize="20dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/editText_pw"
            android:fontFamily="@font/jua_ttf"
            android:hint="비밀번호 입력"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_repple_ex"
        android:fontFamily="@font/jua_ttf"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textColor="#000000"
            android:textSize="15dp"
            android:fontFamily="@font/jua_ttf"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#000000"
            android:fontFamily="@font/jua_ttf"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textColor="#000000"
            android:textSize="15dp"
            android:fontFamily="@font/jua_ttf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#000000"
            android:fontFamily="@font/jua_ttf"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 가입"
            android:textColor="#000000"
            android:fontFamily="@font/jua_ttf"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View
            android:layout_width="15dp"
            android:layout_height="2dp"
            android:layout_weight="2"
            android:background="#000000"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:fontFamily="@font/jua_ttf"
            android:text="다른 로그인 방식"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <View
            android:layout_width="15dp"
            android:layout_height="2dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="#000000" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:id="@+id/naverLoginBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/naver_login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naver"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jua_ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:id="@+id/kakaoLoginBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/kakao_login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kakao"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jua_ttf"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:id="@+id/googleLoginBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/google_login" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jua_ttf"/>
        </LinearLayout>
    </LinearLayout>
    <com.navercorp.nid.oauth.view.NidOAuthLoginButton
        android:id="@+id/buttonOAuthLoginImg"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />


</LinearLayout>
